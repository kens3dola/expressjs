extends ../layout
block script
        script(src="/javascripts/enrolmentValidate.js" defer)
        link(rel='stylesheet', href='/stylesheets/enrolmentValidate.css')
block content
        h1= title
        form(method='POST', action=enrolment.url+'/update')
                label(for="student") Student id:
                input(type="number", name="student", value=enrolment.student.studentId, disabled)
                br
                label(for="course") Course id:
                input(type="text", name="course", value=enrolment.course.courseId, disabled)
                br
                label(for="semester") Semester:
                select(name="semester", disabled)
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4
                        option(value="5") 5
                        option(value="6") 6
                        option(value="7") 7
                        option(value="8") 8
                br
                label(for="grade") Grade:
                select(name="grade")
                        option(value="") Not graded
                        option(value="F") Fail
                        option(value="P") Pass
                        option(value="G") Good
                        option(value="E") Excellent
                br
                button(id='enAdd', class='button')= title
